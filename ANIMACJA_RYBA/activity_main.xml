<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:src="@drawable/fish" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnObrot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ObrÃ³t"
                android:onClick="obracaj"/>

            <Button
                android:id="@+id/btnSkala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Skala"
                android:onClick="skaluj"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Zanik"
                android:onClick="zanikaj"/>

            <Button
                android:id="@+id/btnPrzesuw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Przesuw"
                android:onClick="przesuwaj"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnWszystko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WSZYSTKO"
            android:onClick="stosuj_wszystko"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
